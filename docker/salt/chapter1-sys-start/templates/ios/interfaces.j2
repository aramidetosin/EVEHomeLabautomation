{% if pillar.interfaces is defined %}
{% for intf in pillar.interfaces %}
{% if "." in intf.interface %}
  interface {{intf.interface.split(".")[0]}}
    no shut
{% endif %}
interface {{intf.interface}}
  {% if "." in intf.interface %}
  encapsulation dot1Q {{intf.interface.split(".")[1]}}
  {% endif %}
  {% if intf.description %}
  description {{intf.description}}
  {% endif %}
  {% if intf.ipv4addr %}
  ip address {{intf.ipv4addr.split("/")[0]}} 255.255.255.0
  {% endif %}
  {% if intf.ipv6addr %}
  ipv6 address {{intf.ipv6addr}}
  {% endif %}
  no shut
{% endfor -%}
{% endif %}
interface {{pillar.mgmtint}}
  ip address {{pillar.mgmtipv4.split("/")[0]}} 255.255.255.0
  no shut
int lo0
  ip address {{pillar.loopbackv4.split("/")[0]}} 255.255.255.255
